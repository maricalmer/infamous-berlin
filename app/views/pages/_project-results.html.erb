<% if @projects.empty? %>
  <h4 class="my-5">No result for project... 🤦🏻‍♂️</h4>
<% else %>
  <ul>
  <% @projects.each do |project| %>
    <div class="card m-3">
      <div class="card-body">
        <div class="card-title"><%= link_to project.title, project_path(project.slug) %></div>
        <div class="card-text"><%= project.location %></div>
        <div class="card-text"><%= project.description %></div>
      </div>
    </div>
  <% end %>
  </ul>
<% end %>
