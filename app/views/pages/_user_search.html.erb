<% if @users.empty? && @projects.empty? %>
  <h4 class="numbers-results">
    No user or project matched your search for "<%= @query %>"
    <i class="far fa-sad-cry"></i>
  </h4>
<% elsif @users.empty? %>
  <h4 class="numbers-results">No user matched your search for "<%= params[:query] %>" but <%= @projects.count %> <%= "project".pluralize(@projects.count) %> did <span class="manicule">&#9758</span></h4>
<% else %>
  <h4 class="numbers-results"><%= @users.count %> <%= "user".pluralize(@users.count) %> matched your search for "<%= params[:query] %>"</h4>
  <ul class="user-results-list">
  <% @users.each do |user| %>
    <div class="card-user-search">
      <div class="diamond-wrapper">
        <h3 class="card-user-search-username"><%= user.username %></h3>
        <div class="diamond-frame-small">
          <%= link_to user_path(user.slug) do  %>
            <%= cl_image_tag user.photo.key %>
          <% end %>
        </div>
        <h5 class="card-user-search-body-title"><%= user.title %></h5>
      </div>
    </div>
  <% end %>
  </ul>
<% end %>
