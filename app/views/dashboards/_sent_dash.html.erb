<div class="dashboard__inquiry-list slider-js inquiry-dash-js">
  <h4 class="dashboard__mobile-title">Applications</h4>
  <% @inquiries.each do |inquiry| %>
    <div class="dashboard__inquiry-list-item">
      <h4 class="dashboard__inquiry-record-date"><%= inquiry.created_at.strftime("%d/%m") %></h4>
      <h4 class="dashboard__inquiry-record-text">
        Application to project
        <%= link_to inquiry.job.project.title, project_path(inquiry.job.project.slug), class: "dashboard__inquiry-record-link" %> owned by user
        <%= link_to inquiry.job.project.user.username, user_path(inquiry.job.project.user.slug), class: "dashboard__inquiry-record-link" %>
      </h4>
      <% if inquiry.on_hold? %>
        <div class="dashboard__sent-inquiries-icons">
          <%= link_to inquiry_path(inquiry), class:"dashboard__inquiry-record-btn dashboard__inquiry-record-btn dashboard__inquiry-record-btn--show" do %>
            <i class="dashboard__inquiry-record-icon fas fa-arrow-right"></i>
          <% end %>
          <%= link_to edit_inquiry_path(inquiry), class:"dashboard__inquiry-record-btn dashboard__inquiry-record-btn dashboard__inquiry-record-btn--edit" do %>
            <i class="dashboard__inquiry-record-icon fas fa-pencil-alt"></i>
          <% end %>
          <%= link_to inquiry_path(inquiry), class:"dashboard__inquiry-record-btn dashboard__inquiry-record-btn dashboard__inquiry-record-btn--delete", method: :delete, data: { confirm: "Are you sure?" } do %>
            <i class="dashboard__inquiry-record-icon fas fa-trash"></i>
          <% end %>
        </div>
      <% else %>
        <%= link_to inquiry_path(inquiry), class:"dashboard__inquiry-record-btn dashboard__inquiry-record-btn--show" do %>
          <i class="dashboard__inquiry-record-icon fas fa-arrow-right"></i>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
