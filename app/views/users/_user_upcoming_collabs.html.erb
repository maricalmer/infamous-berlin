<% if @upcoming_collabs.empty? %>
  <h4>no upcoming project</h4>
<% else %>
  <% @upcoming_collabs.each do |collab| %>
    <div class="card-project-user-profile">
      <%= link_to project_path(collab.project.slug) do  %>
        <div class="d-flex">
          <div class="card-img-wrapper-user-profile">
            <%= cl_image_tag collab.project.photos.first.key, class: "card-img" %>
          </div>
          <div class="ribbon-wrapper-user-profile">
            <div class="ribbon-user-profile">UPCOMING</div>
          </div>
          <div class="w-100">
            <h4 class="title-card-project-user-profile"><%= collab.project.title %></h4>
            <div class="subtitle-card-collab-user-profile">by <%= collab.project.user.username %></div>
            <div class="text-card-collab-user-profile"><%= collab.project.description %></div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
<% end %>
