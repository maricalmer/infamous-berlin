<div class="background-search">
  <%= render 'shared/navbar' %>
  <div class="mt-5 users-index-js user-index">
    <%= simple_form_for :search, url: users_path, html: { class: "search-form-js" }, remote: true, method: :get do |f| %>
      <div class="search-bar-search-page search-data" data-set="<%= @autocomplete_set.to_json %>">
        <label></label>
        <!-- ^^^ autocomplete dependency (change autocomplete.js??) -->
        <input type="text" name="query" placeholder="Search through users..." class="search-input-search-page refresh-input-js user-input-highlight-js" autocomplete="off">
        <button type="submit">
          <i class="fas fa-search search-btn-search-page"></i>
        </button>
      </div>
      <div class="jobs-index-checkboxes">
        <%= f.collection_radio_buttons :status, [["past", "Past projects"], ["upcoming", "Upcoming projects"], ["all", "All"]], :first, :last, item_label_class: 'checkbox-label-js', checked: "all" %>
      </div>
    <% end %>
  </div>
  <%= render "index_user", users: @users, query: params[:query] %>
</div>
