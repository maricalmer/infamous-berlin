<%= render 'shared/hamburger' %>
<h1 class="portfolio-page__title">
  <% if current_user == @user %>
    Portfolio
  <% else %>
    <%= @user.username %> portfolio
  <% end %>
  <div class="portfolio-page__underline"></div>
</h1>
<div class="portfolio-page__portfolio">
  <% if current_user == @user %>
    <button class="portfolio-page__save-btn save-display-btn-js">Save your changes</button>
    <div class="portfolio-page__grid-stack grid-stack gridstack-edit-js">
      <% @mirrors.each do |mirror| %>
        <%= render partial: "mirrors_gridstack_edit_grid", locals: { mirror: mirror } %>
      <% end %>
    </div>
  <% else %>
    <div class="portfolio-page__grid-stack grid-stack gridstack-static-js">
      <% @mirrors.each do |mirror| %>
        <%= render partial: "mirrors_gridstack_static_grid", locals: { mirror: mirror } %>
      <% end %>
    </div>
  <% end %>
  <div class="portfolio-page__mobile-grid">
    <% @mirrors.each do |mirror|  %>
      <%= render partial: "mirrors_mobile_grid", locals: { mirror: mirror } %>
    <% end %>
  </div>
</div>
