<div class="modal fade" id="modalLogin" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content form-login">
      <div class="modal-header header-form-login">
        <h5 class="modal-title" id="exampleModalLabel">Please Log in</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), remote: true) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "off", class: "input-form-login" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "off", class: "input-form-login" } %>
            <%= f.input :remember_me, input_html: { class: "check-form-login" }, as: :boolean if devise_mapping.rememberable? %>
          </div>
          <div class="error-new-session text-danger"></div>
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: "link-form-login" %><br/>
          <%= link_to "Create an account", new_user_registration_path, class: "link-form-login" %>
          <div class="modal-footer footer-form-login">
            <%= f.button :submit, "Log in", class: "btn btn-message" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
