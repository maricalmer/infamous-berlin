<nav class="hamburger-menu" role='navigation'>
  <div id="menu-toggle" class="hamburger-menu__toggle-sidebar">
    <input type="checkbox" id="checkbox" class="hamburger-menu__checkbox"/>
    <div class="hamburger-menu__screen-blur"></div>
    <span class="hamburger-menu__burger-slice hamburger-menu__burger-slice--top"></span>
    <span class="hamburger-menu__burger-slice hamburger-menu__burger-slice--middle"></span>
    <span class="hamburger-menu__burger-slice hamburger-menu__burger-slice--bottom"></span>
    <ul id="menu" class="hamburger-menu__navigation">
      <li class="hamburger-menu__brand">
        <%= link_to "InfamousBerlin", root_path, class: "hamburger-menu__link" %>
        <div class="hamburger-menu__brand-underline"></div>
      </li>
      <li class="hamburger-menu__sections">
        <ul class="hamburger-menu__section hamburger-menu__section--first-section">
          <li class="hamburger-menu__item"><%= link_to "Events", events_path, class: "hamburger-menu__link" %></li>
          <li class="hamburger-menu__item"><%= link_to "Find talent", users_path, class: "hamburger-menu__link" %></li>
          <li class="hamburger-menu__item"><%= link_to "Find project", upcoming_projects_path, class: "hamburger-menu__link" %></li>
          <li class="hamburger-menu__item"><%= link_to "Find job", jobs_path, class: "hamburger-menu__link" %></li>
        </ul>
        <ul class="hamburger-menu__section hamburger-menu__section--second-section">
          <% if !user_signed_in? %>
            <li class="hamburger-menu__item"><%= link_to "Log in", new_user_session_path, data: {'bs-toggle': "modal", 'bs-target': "#modalLogin"}, class: "hamburger-menu__link" %></li>
            <li class="hamburger-menu__item"><%= link_to "Sign up", new_user_registration_path, class: "hamburger-menu__link" %></li>
          <% else %>
            <li class="hamburger-menu__item"><%= link_to "Dashboard", dashboard_path, class: "hamburger-menu__link" %></li>
            <li class="hamburger-menu__item hamburger-menu__item--messages">
              <%= link_to "Messages", chatrooms_path, class: "hamburger-menu__link" %>
              <% if current_user.unread_messages? %>
                <div class="hamburger-menu__messages-badge"></div>
              <% end %>
            </li>
            <li class="hamburger-menu__item"><%= link_to "Log out", destroy_user_session_path, method: :delete, class: "hamburger-menu__link" %></li>
          <% end %>
        </ul>
      </li>
