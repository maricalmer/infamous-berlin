<div class="modal fade" id="modalMessageNew" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Message
          <% if params[:controller] == "projects" %>
            <%= @project.user.username %>
          <% else %>
            <%= @user.username %>
          <% end %>
        </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for [ @message ], remote: true do |f| %>
          <%= hidden_field_tag 'project_id', @project.id %>
          <%= f.input :content, as: :text, error: 'Please type a message' %>
          <div class="error-new-message text-danger"></div>
          <%= f.button :submit, "Send message", class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
