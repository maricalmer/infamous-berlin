<div data-project=<%= @project.id %>>
  <% if !user_signed_in? %>
    <%= link_to new_user_session_path, data: {'bs-toggle': "modal", 'bs-target': "#modalLogin"} do %>
      <button type="button" class="ms-5 btn btn-success" >
        Apply now!
      </button>
    <% end %>
  <% elsif !@jobs.first.applied?(current_user) %>
    <button type="button" class="ms-5 btn btn-success" data-bs-toggle="modal" data-bs-target="#confirmApplicationModal" >
      Apply now!
    </button>
  <% else %>
    <button type="button" class="ms-5 btn btn-secondary" >
      Application send
    </button>
  <% end %>
</div>

<div class="modal fade" id="confirmApplicationModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Your application to <%= @jobs.first.title %></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Please confirm that you would like to apply to:<br><br>
        <ul><%= @jobs.first.title %></ul>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <%= link_to "Apply", inquiries_path, class: "btn btn-success", method: :post, remote: true %>
      </div>
    </div>
  </div>
</div>
