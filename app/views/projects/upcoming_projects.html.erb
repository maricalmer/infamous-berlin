<div class="background-search">
  <%= render 'shared/navbar' %>
  <div class="mt-5 user-index bck-btn-reload-js">
    <%= simple_form_for :search, url: upcoming_projects_path, html: { class: "search-refresh-form search-form-js"}, remote: true, method: :get do |f| %>
      <div class="search-bar-search-page">
        <input type="text" name="query" placeholder="Search through upcoming projects..." class="masonry-js search-input-search-page refresh-input-js user-input-highlight-js" autocomplete="off">
        <button type="submit">
          <i class="fas fa-search search-btn-search-page"></i>
        </button>
      </div>
      <div class="jobs-index-filter-options">
        <div class="jobs-index-filter">
          <i class="fas fa-filter filter-effect-js"></i>
          <div class="jobs-index-filter-text filter-effect-js">FILTER</div>
        </div>
        <div class="job-index-radio-buttons-hidden show-radio-btns-js">
          <%= f.collection_radio_buttons :status, [["upcoming", "Upcoming projects"], ["past", "Past projects"], ["all", "All"]], :first, :last, item_label_class: 'checkbox-label-js', checked: "upcoming" %>
          <div class="jobs-index-hidding-span-desactivated hide-filter-text-js"></div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="render-results-js">
    <%= render "search-results", projects: @projects, query: params[:query] %>
  </div>
</div>
