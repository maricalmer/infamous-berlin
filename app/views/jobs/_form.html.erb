<%= simple_form_for [ @project, @job ], remote: true, html: { class: "form-js"} do |f| %>
  <%= f.input :title, label: 'Job title:', required: true, wrapper_html: { class: "form-page__job-title" }, label_html: { class: 'form-page__label' }, input_html: { autocomplete: "off", class: "form-page__input form-page__input--job-title" } %>
  <%= f.input :description, label: 'Describe the job:', required: true, wrapper_html: { class: "form-page__job-description" }, label_html: { class: 'form-page__label' }, input_html: { class: "form-page__input form-page__input--big" } %>
  <%= f.input :location, label: 'Job location:', wrapper_html: { data: { set: @location_autocomplete_set.to_json }, class: "form-page__job-location search-data-js" }, label_html: { class: 'form-page__label' }, input_html: { class: 'form-page__input search-input-js' } %>
  <%= f.input :skills_needed, wrapper_html: { class: "skills-hidden-field" }, input_html: { class: "attributes_hidden_field_js" } %>
  <div class="form-page__skills-custom">
    <div class="form-page__add-skills">
      <label for="fname" class="form-page__add-skills-label form-page__label">New skill:</label>
      <div class="form-page__add-skills-input-and-btn">
        <input type="text" id="fname" class="form-page__add-skills-input form-page__input attribute-value-js"></input>
        <div class="form-page__add-skills-btn btn-add-attribute-js">Add</div>
      </div>
    </div>
    <div>
      <label class="form-page__skills-list-label form-page__label">Skills list:</label>
      <ol class="form-page__skills-list-items attributes-list-js"></ol>
    </div>
  </div>
  <div class="form-page__job-payment-and-status">
    <div class="form-page__payment-type-dropdown-wrapper">
      <%= f.input :payment, label: 'Payment type:', as: :select, collection: [["fixed rate", "fixed_rate"], ["hourly rate", "hourly_rate"]], include_blank: false, wrapper_html: { class: "form-page__payment-type-dropdown" }, input_html: { class: "form-page__input form-page__payment-type-input dropdown-payment-js" }, label_html: { class: "form-page__label form-page__payment-type-label" } %>
      <i class="fas fa-angle-down"></i>
    </div>
    <div class="form-page__job-money-wrapper">
      <%= f.input :money, label: 'Money:', required: true, wrapper_html: { class: "form-page__job-money" }, label_html: { class: "form-page__label form-page__job-money-label" }, input_html: { class: "form-page__input form-page__job-money-input", value: "100", step: "10", min: "0" } %>
      <div class="form-page__job-money-trailing-label job-payment-js">â‚¬ total</div>
    </div>
    <div class="form-page__job-status-wrapper">
      <%= f.input :status, label: 'Status:', as: :select, collection: ["open", "close"], include_blank: false, wrapper_html: { class: "form-page__job-status" }, input_html: { class: "form-page__input form-page__job-status-input" }, label_html: { class: "form-page__label form-page__job-status-label" } %>
      <i class="fas fa-angle-down"></i>
    </div>
  </div>
  <%= f.submit "Save!", class: "form-page__submit-btn form-btn-js" %>
  <button class="form-page__loading-btn form-page__loading-btn--hidden form-btn-js" type="button" disabled>
    <span class="spinner-border" role="status" aria-hidden="true"></span>
    Loading...
  </button>
<% end %>
