<div class="devise-form-container">
  <div class="devise-form">
    <h1 class="brand-devise-form">
      <%= link_to "InfamousBerlin", root_path %>
    </h1>
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <%= f.input :reset_password_token, as: :hidden %>
      <%= f.full_error :reset_password_token %>

      <div class="form-inputs">
        <%= f.input :password,
                    label: "New password",
                    required: true,
                    autofocus: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    label: "Confirm your new password",
                    required: true,
                    input_html: { autocomplete: "new-password" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Change my password" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
  <div class="right-side-signup">
    <div class="devise-form-video-text">Find the right people for your <span>art project</span>.</div>
    <div class="video-gradient girls_smile-gradient"></div>
    <%= video_tag asset_path('rapper.mp4'), autoplay: :autoplay, loop: :loop, muted: :muted, class: "video-girls" %>
  </div>
</div>
