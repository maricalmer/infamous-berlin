<div class="devise-form__container">
  <div class="devise-form">
    <h1 class="devise-form__brand">
      <%= link_to "InfamousBerlin", root_path, class: "devise-form__brand-link" %>
    </h1>
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <%= f.input :reset_password_token, as: :hidden %>
      <%= f.full_error :reset_password_token %>

      <div class="form-inputs">
        <%= f.input :password,
                    label: "New password",
                    required: true,
                    autofocus: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "off", class: 'form-page__input form-page__input--sign-up' },
                    label_html: { class: 'form-page__label' } %>
        <%= f.input :password_confirmation,
                    label: "Confirm your new password",
                    required: true,
                    input_html: { autocomplete: "off", class: 'form-page__input form-page__input--sign-up' },
                    label_html: { class: 'form-page__label' } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Change my password", class: "devise-form__btn" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
  <div class="devise-form__video-section">
    <div class="devise-form__video-text">Find the right people for your <span class="devise-form__video-text--highlight">art project</span>.</div>
    <div class="devise-form__video-gradient"></div>
    <%= video_tag asset_path('rapper.mp4'), autoplay: :autoplay, loop: :loop, muted: :muted, playsinline: :playsinline, class: "devise-form__video" %>
  </div>
</div>
