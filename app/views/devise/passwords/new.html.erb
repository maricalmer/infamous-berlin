<div class="devise-form-container">
  <div class="devise-form">
    <h1 class="brand-devise-form">InfamousBerlin</h1>
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "input-form-login" }%>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Send instructions", :class => "btn-message" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
  <div class="right-side-signup">
    <div class="devise-form-video-text">Find the right people for your <span>art project</span>.</div>
    <div class="video-gradient singer-gradient"></div>
    <%= video_tag "singer", autoplay: :autoplay, loop: :loop, muted: :muted, class: "video-singer" %>
  </div>
</div>
