<div class="devise-form-container">
  <div class="devise-form">
    <h1 class="brand-devise-form">InfamousBerlin</h1>
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "input-form-login" }%>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Send instructions", :class => "btn-message" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
  <div class="devise-form-img"></div>
  <div class="devise-form-img-text">Find the missing piece for your <span>art project</span>.</div>
</div>
