<div class="devise-form__container">
  <div class="devise-form">
    <h1 class="devise-form__brand">
      <%= link_to "InfamousBerlin", root_path, class: "devise-form__brand-link" %>
    </h1>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "off", class: "form-page__input" },
                     wrapper_html: { class: 'form-page__label' } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "off", class: "form-page__input" },
                     wrapper_html: { class: 'form-page__label' } %>
        <%= f.input :remember_me, input_html: { class: "devise-form__checkbox" }, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "devise-form__btn" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
  <div class="devise-form__video-section">
    <div class="devise-form__video-text">Find the right people for your <span>art project</span>.</div>
    <div class="devise-form__video-gradient"></div>
    <%= video_tag asset_path('rapper.mp4'), autoplay: :autoplay, loop: :loop, muted: :muted, class: "devise-form__video" %>
  </div>
</div>
